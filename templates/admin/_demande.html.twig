</nav>
<div class="container">
    <div class="container-title">Demandes</div>
    <div class="col-12">
        <table class="table table-hover" data-pagination="true" data-toggle="table" data-filter-control="true" data-click-to-select="true" data-auto-refresh="true">
            <thead>
                <tr>
                    <th data-field="email" data-filter-control="input" data-sortable="true">Email</th>
                    <th data-field="creation" data-filter-control="input" data-sortable="true">Date de cr√©ation</th>
                    <th data-field="status" data-filter-control="select" data-sortable="true">Statut</th>
                    <th data-field="ip" data-sortable="true">IP</th>
                </tr>
            </thead>
            <tbody>
                {% for demande in demande %}
                    <tr>
                        <td>{{ demande.getUser().getEmail() }}</td>
                        <td>{{ demande.getCreatedAt().format('d/m/Y') }}</td>
                        <td>{{ demande.getStatus() }}</td>
                        <td>{{ demande.ip }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<script src="{{ asset('js/jqueryTable.js') }}"></script>
<script src="{{ asset('js/bootstrapTable.js') }}"></script>
