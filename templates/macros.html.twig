{# templates/macros.html.twig #}

{% macro modal(id, message, link, buttonText) %}
    <div class="modal fade" id="{{ id }}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="alert alert-danger" role="alert">
                        <div class="fs-5">{{ message }}</div>
                    </div><br />
                    {% if link %}
                        <a class="fs-5" href="{{ link }}">{{ buttonText }}</a>
                    {% endif %}
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button type="button" class="btn btn-lg btn-danger" data-bs-dismiss="modal">Retour</button>
                </div>
            </div>
        </div>
    </div>
{% endmacro %}

{% macro alert(type, message, link, linkText) %}
    <div class="alert alert-{{ type }} message auto-close-alert" role="alert">
        {{ message }}
        {% if link %}
            <a href="{{ link }}">{{ linkText }}</a>
        {% endif %}
    </div>
{% endmacro %}

{% macro button(path, label, imagePath, classes = '') %}
    {% if imagePath is not empty %}
        <div class="col-12 col-md-6 col-lg-3 {{ classes }}">
            <div class="card shadow-sm">
                <img src="{{ imagePath }}" class="card-img-top img-fluid" alt="{{ label }}" onerror="this.onerror=null;this.parentElement.innerHTML='<a class=\'btn btn-cleo btn-lg w-100\' href=\'{{ path }}\'>{{ label }}</a>';">
                <div class="card-body text-center">
                    <a class="btn btn-cleo btn-sm w-100 mt-2" href="{{ path }}">{{ label }}</a>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12 col-md-6 col-lg-3 {{ classes }}">
            <a class="btn btn-cleo btn-lg w-100" href="{{ path }}">{{ label }}</a>
        </div>
    {% endif %}
{% endmacro %}


