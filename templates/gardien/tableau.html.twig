{% extends 'base.html.twig' %}

{% block title %}Les demandes à délivrer | Fluxel{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrapTable.css') }}">
    <link rel="stylesheet" href="{{ asset('css/customContainer.css') }}">
    <link rel="stylesheet" href="{{ asset('css/tablefiltercontrol.css') }}">
    <link rel="stylesheet" href="{{ asset('css/demandeSDRI.css') }}">
{% endblock %}

{% block body %}
    <div class="table-container container">
        <h2 class="bg-cleo">Les demandes à délivrer :</h2>

        <table
                class="table"
                data-pagination="true"
                data-toggle="table"
                data-filter-control="true"
                data-search="false"
                data-click-to-select="true"
        >
            <thead>
            <tr>
                <th data-field="entreprise" data-filter-control="select" data-sortable="true">Entreprise</th>
                <th data-field="nom" data-filter-control="input" data-sortable="true">Nom</th>
                <th data-field="prenom" data-filter-control="input" data-sortable="true">Prénom</th>
                <th data-field="date" data-filter-control="select" data-sortable="true">Date de Demande</th>
                <th data-field="status" data-filter-control="select" data-sortable="true">Statut</th>
                <th>Commentaire</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for demande in demandes %}
                <tr>
                    <td>{{ demande.getInternalData('person_step_one', 'company_name') ?: 'Pas renseigné' }}</td>
                    <td>{{ demande.getInternalData('person_step_two', 'employee_last_name') ?: 'Pas renseigné' }}</td>
                    <td>{{ demande.getInternalData('person_step_two', 'employee_first_name') ?: 'Pas renseigné' }}</td>
                    <td>
                        {% set date = demande.getInternalData('person_step_one', 'request_date') %}
                        {{ date ? date|date('d/m/Y') : 'N/A' }}
                    </td>
                    <td>{{ demande.getStatus() }}</td>
                    <td>Pas renseigné</td> {# Pas de commentaire dans StepData par défaut #}
                    <td>
                        {% set isCardEdited = demande.getStatus() == constant('App\\MultiStepBundle\\Application\\Enum\\StepDataStatus::CARD_EDITED') %}
                        {% set parametre = isCardEdited ? 'delivrer' : 'PasBesoin' %}
                        <button type="button" class="btn btn-cleo me-3" data-bs-toggle="modal" data-bs-target="#commentModal{{ demande.getStepId() }}">
                            {{ isCardEdited ? 'Délivrer la carte' : 'Mettre un commentaire' }}
                        </button>

                        <div class="modal fade" id="commentModal{{ demande.getStepId() }}" tabindex="-1" aria-labelledby="modalLabel{{ demande.getStepId() }}" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5 fw-bold mb-2" id="modalLabel{{ demande.getStepId() }}">Mettre un commentaire</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form
                                                method="post"
                                                action="{{ path('app_gardien_commentaire', {'id': demande.getStepId(), 'parametre': parametre}, true) }}"
                                                class="pt-4 pb-3 ps-3 pe-3"
                                        >
                                            <div class="form-floating">
                                                <textarea
                                                        name="commentaireDeliveryCarte"
                                                        class="form-control"
                                                        id="commentaireTextarea{{ demande.getStepId() }}"
                                                        placeholder="Laissez un commentaire"
                                                        style="height: 200px"
                                                ></textarea>
                                                <label for="commentaireTextarea{{ demande.getStepId() }}">Commentaire</label>
                                            </div>
                                            <div class="text-center mb-4">
                                                <button type="submit" class="btn btn-lg btn-cleo mt-4 border border-dark-subtle">
                                                    {{ isCardEdited ? 'Délivrer la carte' : 'Mettre un commentaire' }}
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="col-12 p-0 d-flex justify-content-center mt-4 mb-5">
            <a class="btn btn-danger btn-lg" href="{{ path('app_home') }}">
                <img src="{{ asset('css/icons/arrow-left-short.svg') }}" width="32" height="32" alt="">
                Retour à l'accueil
            </a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/bootstrap-table.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap-table-filter-control.min.js') }}"></script>
    <script src="{{ asset('js/bootstrapTableFR.min.js') }}"></script>
{% endblock %}
