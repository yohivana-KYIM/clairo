                        <li class="breadcrumb-item"><a class="link-underline link-underline-opacity-0">Document professionnel</a></li>
                    {% endif %}
                    {% if intervention.id is defined and intervention.id is not null and etatCivil.id is defined and etatCivil.id is not null and  filiation.id is defined and filiation.id is not null and  adresse.id is defined and adresse.id is not null and  infoComplementaire.id is defined and infoComplementaire.id is not null and documentPersonnel.id is defined and documentPersonnel.id is not null and documentProfessionnel.id is defined and documentProfessionnel.id is not null %}
                        <li class="breadcrumb-item" aria-current="page"><a class="link-underline link-underline-opacity-0"  href="{{ path('app_demande_titre_circulation_edit', {'id': demande.id}) }}">Récapitulatif</a></li>
                    {% else %}
                        <li class="breadcrumb-item" aria-current="page"><a class="link-underline link-underline-opacity-0">Récapitulatif</a></li>
                    {% endif %}
                </ol>
            </nav>
            <div class="border border-dark-subtle rounded-top info-form">
                <div class="col-12 bg-cleo rounded-top p-0 m-0 h5">
                    <p class="p-3">Intervention</p>
                </div>
                <div class="col-12 p-3">
                    {{ form_start(form) }}
                    <div class="p-3 row">
                        <label class="h5">Lieu de l'intervention :<span style="color: red;">*</span></label>
                        <div class="form-check">
                            {{ form_widget(form.exploitationFos) }}
                        </div>
                        <div class="form-check">
                            {{ form_widget(form.exploitationLavera) }}
                        </div>
                    </div>
                    <div class="p-3 row">
                            <label class="h5">Motif de l'intervention :<span style="color: red;">*</span></label>
                            {{ form_widget(form.motif, {'attr': {'class': 'form-control motif_principal is-invalid formvalidate'}}) }}
                        <div class="p-3">
                            {{ form_widget(form.autre, {'attr': {'class': 'form-control autre_motif is-invalid', 'id': 'floatingTextarea2', 'placeholder': 'Veuillez saisir un motif'}}) }}
                        </div>
                    </div>
                    <div class="p-3 row">
                            <label for="" class="h5">Durée de l'intervention :<span style="color: red;">*</span></label>
                            {{ form_widget(form.duree, {'attr': {'class': 'form-control duree_temporaire is-invalid formvalidate'}}) }}
                        <div class="p-3">
                            {{ form_widget(form.dateIntervention, {'attr': {'class': 'form-control date_temporaire', 'style': 'display:none;'}}) }}
                            {{ form_errors(form.dateIntervention, {'attr': {'class': 'form-control date_temporaire', 'style': 'display:none;'}}) }}
                        </div>
                    </div>

                    <div class="row p-3">
                        <div class="col-12">
                            <label class="h5">Entreprise :<span style="color: red;">*</span></label>
                            <a type="button" class="link-body-emphasis link-offset-2 link-underline-opacity-25 link-underline-opacity-75-hover1" data-bs-toggle="modal" data-bs-target="#createModal{{ demande.id }}">Je ne trouve pas mon entreprise</a>
                        </div>
                        {{ form_widget(form.entreprise, {'attr': {'class': 'is-invalid formvalidate'} }) }}
                    </div>
                    <div class="row mt-4">
                        <div class="col-12 p-0 d-flex justify-content-around">
                            <a class="btn btn-danger btn-lg me-3" href="{{ path('app_home') }}">
                                <img src="{{ asset('css/icons/arrow-left-short.svg') }}" width="32" height="32">
                                Reprendre ultérieurement
                            </a>
                            <button class="btn btn-success btn-lg me-3">
                                {{ button_label|default('Suivant') }}
                                <img src="{{ asset('css/icons/arrow-right-short.svg') }}" width="32" height="32">
                            </button>
                        </div>
                    </div>
                {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

