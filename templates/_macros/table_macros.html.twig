
{% macro table(headers, rows, actions) %}
    <table class="table">
        <thead>
        <tr>
            {% for header in headers %}
                <th>{{ header }}</th>
            {% endfor %}
            {% if actions %}
                <th>Actions</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for row in rows %}
            <tr>
                {% if actions is iterable %}
                    {% for action in actions %}
                        <button class="btn btn-primary">{{ action }}</button>
                    {% endfor %}
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endmacro %}
