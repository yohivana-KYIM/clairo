{# templates/emails/rejection_email.html.twig #}
<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <title>Votre demande n’a pas été approuvée</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
      .container{max-width:600px;margin:0 auto;padding:24px;font-family:Arial,Helvetica,sans-serif;font-size:16px;line-height:1.5;color:#222}
      h1{font-size:20px;margin:0 0 12px}
      .reason{background:#f8f8f8;border:1px solid #eee;padding:12px;border-radius:4px;white-space:pre-wrap}
      .reason p{margin:0 0 8px}
      .muted{color:#666;font-size:13px}
      .btn{display:inline-block;padding:10px 16px;text-decoration:none;border-radius:4px;border:1px solid #ccc}
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Votre demande n’a pas été approuvée</h1>
      <p>Bonjour{% if recipient_name is defined %} {{ recipient_name }}{% endif %},</p>
      <p>Après examen de votre dossier, nous ne pouvons pas l’approuver pour le moment.</p>

      <p><strong>Motif du refus</strong></p>
      {{ (reject_reason|default('Aucun motif spécifique n’a été fourni.'))
         |striptags('<p><br><strong><em><b><i><ul><ol><li>')
         |raw }}
      <p class="muted"> L’équipe Cléo</p>
    </div>
  </body>
</html>
