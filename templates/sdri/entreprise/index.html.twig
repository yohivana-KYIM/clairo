{% extends 'base.html.twig' %}

{% block title %}Entreprise index{% endblock %}
{% block body %}
    <div class="container big-container">
        <div class="container-title">Liste des entreprises</div>
        <table class="table table-responsive table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th class="col-multisort" data-direction="asc" data-prior="1">Nom</th>
                    <th class="optional-field">Code APE</th>
                    <th class="optional-field">Signe</th>
                    <th class="optional-field">ComplementNom</th>
                    <th class="col-multisort" data-direction="desc" data-prior="1">Tva Intra-Communautaire</th>
                    <th class="optional-field">Secteur</th>
                    <th class="optional-field">Statut</th>
                    <th class="optional-field">Type</th>
                    <th class="optional-field">Nature</th>
                    <th>Siret</th>
                    <th>Num Telephone</th>
                    <th>Nom Responsable</th>
                    <th class="optional-field">Siren</th>
                    <th class="optional-field">Naf</th>
                    <th>Nationalite</th>
                    <th>Email Referent</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entreprise in entreprises %}
                <tr>
                    <td>{{ entreprise.id }}</td>
                    <td>{{ entreprise.nom }}</td>
                    <td>{{ entreprise.codeAPE }}</td>
                    <td>{{ entreprise.signe }}</td>
                    <td>{{ entreprise.complementNom }}</td>
                    <td>{{ entreprise.tvaIntraCommunautaire }}</td>
                    <td>{{ entreprise.secteur }}</td>
                    <td>{{ entreprise.statut }}</td>
                    <td>{{ entreprise.type }}</td>
                    <td>{{ entreprise.nature }}</td>
                    <td>{{ entreprise.siret }}</td>
                    <td>{{ entreprise.numTelephone }}</td>
                    <td>{{ entreprise.nomResponsable }}</td>
                    <td>{{ entreprise.siren }}</td>
                    <td>{{ entreprise.naf }}</td>
                    <td>{{ entreprise.nationalite }}</td>
                    <td>{{ entreprise.emailReferent }}</td>
                    <td>
                        <a class="btn btn-cleo" href="{{ path('app_entreprise_show', {'id': entreprise.id}) }}">Détails</a>
                        <a class="btn btn-cleo" href="{{ path('app_entreprise_edit', {'id': entreprise.id}) }}">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="18">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <button class="btn btn-cleo toggle-optional-fields">Afficher les champs optionnels</button>
        <a class="btn btn-cleo" href="{{ path('app_entreprise_new') }}">Créer une entreprise</a>
    </div>
{% endblock %}
